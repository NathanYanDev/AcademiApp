<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:AcademiApp.Pages.Lectures"
             x:Class="AcademiApp.Pages.Lectures.ListLecturesPage"
             Shell.BackgroundColor="#16a34a">

    <Page.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="#16a34a"/>
    </Page.Behaviors>

    <Shell.TitleView>
        <FlexLayout AlignItems="Center" JustifyContent="SpaceBetween">
            <Label
            Text="Disciplinas"
            FontFamily="RobotoMonoBold"
            TextColor="White"
            VerticalTextAlignment="Center"
            VerticalOptions="Center"
            HeightRequest="50"
            FontSize="Medium" 
        />
            <Button BackgroundColor="Transparent" ImageSource="plus.png" Clicked="GoToAddLecturePage"/>
        </FlexLayout>
    </Shell.TitleView>

    <VerticalStackLayout Padding="10">
        <Frame 
            CornerRadius="10" 
            HeightRequest="50"
            Margin="0,0,0,10"
            Padding="5"
        >
            <FlexLayout AlignItems="Center" JustifyContent="SpaceBetween" Padding="10,0">
                <Entry Placeholder="Pesquisar disciplinas..." WidthRequest="330" />
                <ImageButton Source="search.png" WidthRequest="24"/>
            </FlexLayout>
        </Frame>

        <ListView ItemsSource="{Binding Lectures}" HasUnevenRows="True" SeparatorVisibility="None" CachingStrategy="RecycleElement" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame Margin="0,5" Padding="15">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding LectureName}" FontFamily="LatoBold" FontSize="20" VerticalTextAlignment="Center" LineBreakMode="TailTruncation"/>
                                <Label Text="{Binding LectureCode, StringFormat='CÃ³digo: {0}'}" TextColor="#6b6565" FontSize="16" />
                            </VerticalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:LectureViewModel}}, Path=ItemClickedCommand}" CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>